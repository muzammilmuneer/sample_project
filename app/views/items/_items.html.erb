<div class="container jumbotron">
  <h1>Items</h1>
  <% if can? :create, Item %>
    <p><%= link_to 'Add Item', new_item_path, :class => 'btn btn-primary pull-right' %></p>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <% if can? :create, Item %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @items %>
</div>