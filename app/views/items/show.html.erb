<div class="container custom-width">
  <div class="jumbotron">
    <p>
      <strong>Name:</strong>
      <%= @item.name %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= number_to_currency(@item.price, unit: "PKR ") %>
    </p>
    <% if can? :update, @item %>
      <%= link_to 'Edit', edit_item_path(@item) %> |
    <% end %>
    <% if can? :destroy, @item %>
      <%= link_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
    <%= link_to 'Back', items_path %>
  </div>
</div>