<%= stylesheet_link_tag "form.css", media: 'all', 'data-turbolinks-track' => true %>
<div class = "container">
  <%= form_for(resource, as: resource_name, html: { id: "contact" }, url: session_path(resource_name)) do |f| %>
    <h1>Log In</h1>
    <fieldset>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </fieldset>
    
    <fieldset>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </fieldset>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%=button_tag "Login"%><br/>

  <% end %>

</div>


